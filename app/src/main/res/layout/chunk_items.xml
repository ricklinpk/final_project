<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameOfExpense"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/nameOfExpense" />
    <TextView
        android:id="@+id/amount"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/amount" />
    <Spinner
        android:id="@+id/CategoryOfExpense"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:entries="@array/category_choice" />
    <Spinner
        android:id="@+id/monthOfExpense"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:entries="@array/month_choice" />

    <Spinner
        android:id="@+id/dayOfExpense"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:entries="@array/day_choice" />

    <Button
        android:id="@+id/removeItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remove" />
</LinearLayout>